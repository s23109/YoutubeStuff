@using YoutubeStuff.ViewModels


<div class="nav-links-wrap">
    @if (includeHome)
    {
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link link" href="" Match="NavLinkMatch.All">
                Home
            </NavLink>
        </div>
    </nav>
    }



    @foreach(var ele in navElements)
    {
        <nav class="flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link link" href="@ele.Destination" Match="NavLinkMatch.All">
                    @ele.Title
                </NavLink>
            </div>
        </nav>
    }

