        <div class="nav-item px-3">
            <NavLink class="nav-link link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
    </nav> *@
</div>

@code {
    [Parameter]
    public List<NavElement> navElements { get; set; } = new List<NavElement>();

    [Parameter]
    public bool includeHome { get; set; } = true;
}
